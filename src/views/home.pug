doctype html 
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title BOM
	body
		header
			h1 OX 퀴즈
		main 
			div#welcome 
				form 
					input(placeholder="room name", required, type="text")
					button Enter Room
				h5
				h4 Open Rooms: 
				ul
			div#beforeStart
				h4
				button.start 게임시작
				h5
				ul
				br
				button.exit exit
			div#gameStart
				h4(style="text-align:right") 순위판
				ul(style="text-align:right")
				button.exitWhilePlaying exit
				.clock
				p(style="text-align:center") 문제 : 
					span.question
					span.answer
			div#gameFinish
				h2(style="text-align:center") 게임 결과화면
				ul
			div#ox(style="position: relative;")
				div#container(style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%)")
					button(style="").o O
					button(style="padding: 1000;").x X
			div#gameReady 
				h1 준비 / 준비 풀기
				button.ready 준비 
		script(src="/socket.io/socket.io.js")
		script(src="/public/js/main.js")